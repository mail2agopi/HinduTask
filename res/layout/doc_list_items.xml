<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#eee">

    <ImageView
        android:id="@+id/docImageView"
        android:layout_width="200dp"
        android:layout_height="110dp"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/doodle" />
    
    <RelativeLayout
        android:id="@+id/dummyGrab"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/docImageView"
        android:layout_marginLeft="10dp"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/docText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textSize="10sp" 
            android:gravity="center"
            android:ellipsize="end"
            android:textColor="#666"/>
        
        <TextView
            android:id="@+id/docType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/docText"
            android:maxLines="1"
            android:text="@string/app_name"
            android:textSize="10sp" 
            android:gravity="center"
            android:ellipsize="end"
            android:textColor="#666"/>

        <View
            android:id="@+id/dummyWhiteGrab"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:layout_below="@+id/grabText" />
    </RelativeLayout>

</RelativeLayout>